    <!-- Header-->

    <div class="content mt-3">
        <div class="animated fadeIn">

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Preselection </strong>
                        </div>
                        <div class="card-body">
                            <!-- Credit Card -->
                            <div id="pay-invoice">
                                <div class="card-body">

                                    @using (Html.BeginForm("listepreselection", "EspaceAdmin", FormMethod.Get))
                                    {
                                        <div class="form-group">
                                            <label for="cc-payment" class="control-label mb-1">Filiére</label>
                                            <br />
                                            <div class="form-control">
                                                @Html.DropDownList("filiere", ViewBag.filiere as SelectList, "Selectionner filiere", new { id = "filiere" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="cc-payment" class="control-label mb-1">Diplome</label>
                                            <br />
                                            <div class="form-control">

                                                @Html.DropDownList("deplome", ViewBag.diplome as SelectList, "Selectionner diplome", new { id = "deplome" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class=" form-control-label">Seuil</label>
                                            <input type="text" name="seuil" placeholder="Entrer le seuil" class="form-control">
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Lancer la préselection
                                        </button>
                                    }
                                </div>
                            </div>

                        </div>
                    </div> <!-- .card -->

                </div>
                <!--/.col-->
                                    
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header"><strong>Nombre des etudiants</strong></div>
                        
                            <br />
